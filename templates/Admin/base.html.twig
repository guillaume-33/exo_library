<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset("asset/css/style.css") }}">

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="js_body">
<header>

    <nav>
        <form class="form_search" action="{{ path ('admin_search_author') }}" method="get" >
            <label for="search">auteur: </label>
            <input type="text" id="search" name="search">
            <button> Rechercher</button>
        </form>
        <ul>

            <li class="lien_nav"><a href="{{ path('admin_home') }}">Accueil</a></li>
            <li class="lien_nav"><a href="{{ path('admin_list_books') }}">Livres</a></li>
            <li class="lien_nav"><a href="{{ path('admin_list_authors') }}">Auteurs</a></li>
            <li class="lien_nav"><a href="{{ path('app_logout') }}">Deconnexion</a></li>
            <li class="lien_nav"><a href="{{ path('admin_list_admins') }}">Les Admins</a></li>
        </ul>
        <button class="js_dark_mode">Dark mode</button>
    </nav>
    <p>Bonjour {{ app.user.email }}</p>

</header>

{% for message in app.flashes('success') %}
    <div class="alert-success">
        {{ message }}
    </div>
{% endfor %}
{% block main %}

{% endblock %}

<footer>
    <h2>je suis un footer!</h2>
</footer>
<script src="{{ asset('javaScript/script.js') }}"></script>
</body>

</html>
