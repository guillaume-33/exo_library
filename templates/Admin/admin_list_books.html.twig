{% extends 'base.html.twig' %}
 {% block title %}
      Dernières sorties
 {% endblock %}
{% block main %}
    <h1> Les derniers livres parus cette semaine</h1>
    <p>Decouvrez notre selection des derniers articles parus. Nichon Magazine est un must have !!  </p>
    <a class="btn" href="{{ path('admin_insert_book') }}">Ajouter un livre</a>
    {% for book in books %}
        <article class="livre">

            <h2> Titre: {{book.title }}</h2>
            <p>Nombre de pages: {{ book.nbPages }}</p>
            <p>Publié le: {{ book.publishedAt|date('d/m/y') }}</p>
            <p>Auteur: {{ book.author.firstName ~' '~ book.author.lastName}}</p>

            <div class="liens">
                <a class="btn" href="{{ path('admin_book', {'id':book.id}) }}">En savoir plus</a>
                <a class="btn" href="{{ path('delete_book', {'id':book.id}) }}">Supprimer le livre</a>
                <a class="btn" href="{{ path('update_book', {'id':book.id}) }}">Modifier le livre</a>
            </div>

        </article>
    {% endfor %}
{% endblock %}